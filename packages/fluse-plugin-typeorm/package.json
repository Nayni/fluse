{
  "name": "fluse-plugin-typeorm",
  "description": "Official TypeORM plugin for fluse.",
  "version": "0.4.0",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Rutger Hendrickx",
    "url": "https://github.com/Nayni"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nayni/fluse.git"
  },
  "keywords": [
    "fluse",
    "plugin",
    "composable",
    "database",
    "db",
    "orm",
    "seeder",
    "fixture",
    "typeorm"
  ],
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "eslint . --ext .ts",
    "compile": "tsc -p tsconfig.build.json",
    "build": "yarn clean && yarn compile",
    "example": "ts-node-dev --transpile-only ./example/index.ts",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "eslint": "7.7.0",
    "eslint-config-fluse": "^1.0.2",
    "fluse-prettier-config": "1.0.1",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "sqlite3": "5.0.0",
    "ts-node-dev": "1.0.0-pre.61",
    "typescript": "4.0.2"
  },
  "peerDependencies": {
    "fluse": "^0.2.0",
    "typeorm": "^0.2.25"
  },
  "lint-staged": {
    "{src,example}/**/*.ts": [
      "eslint --max-warnings=0",
      "prettier --write"
    ]
  }
}
