{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**/typeorm/**",
      "**/typeorm"
    ]
  },
  "scripts": {
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "test:ci": "lerna run test:ci --stream",
    "build": "lerna run build --scope=fluse --stream && lerna run build --ignore fluse --stream",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:publish": "lerna publish --conventional-commits --changelog-preset conventionalcommits --create-release github"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  }
}
